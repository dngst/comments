<h1>comments</h1>

<%= form_with model: @comment do |f| %>
	<div>
		<%= f.text_field :body %>
		<span><%= f.submit %></span>
	</div>
<% end %>

<% if @comments.any? %>
	<% @comments.each do |comment| %>
		<p>
			<%= comment.body %>
		</p>
	<% end %>
<% else %>
	<p>no comments yet. be the first to comment.</p>
<% end %>
